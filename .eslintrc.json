{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
        "standard",
        "plugin:jest/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}