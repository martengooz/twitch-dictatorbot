{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es5",
        "sourceMap": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}